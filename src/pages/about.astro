---
/**
 * About Page - Don's Transport Shuttle
 * Company story, mission, values, and why choose us
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import testimonials from '../data/testimonials.json';

// SEO configuration
const seo = {
  title: 'About Us',
  description: 'Learn about Don\'s Transport Shuttle - Gauteng\'s trusted transport partner. Family-owned business committed to reliability, safety, and exceptional service since 2014.',
  keywords: 'about dons transport, gauteng shuttle company, family transport business, professional shuttle service pretoria, johannesburg transport company',
};

// Business details from environment variables
const businessName = import.meta.env.PUBLIC_BUSINESS_NAME || "Don's Transport Shuttle";
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent("Hi, I'd like to book a shuttle. My details:\n\nPickup:\nDropoff:\nDate:\nTime:\nPassengers:")}`;

// Core values
const values = [
  {
    icon: 'clock',
    title: 'Reliability',
    description: 'We pride ourselves on punctuality and dependability. Your time matters, and we respect it.',
  },
  {
    icon: 'shield',
    title: 'Safety First',
    description: 'All drivers are vetted, licensed, and trained. Vehicles undergo regular maintenance and safety inspections.',
  },
  {
    icon: 'star',
    title: 'Professionalism',
    description: 'From the first contact to drop-off, we maintain the highest standards of service and courtesy.',
  },
  {
    icon: 'heart',
    title: 'Customer First',
    description: 'Your comfort and satisfaction drive everything we do. We listen, adapt, and deliver.',
  },
];

// Stats from testimonials data
const stats = [
  { value: testimonials.stats.totalTrips, label: 'Trips Completed' },
  { value: testimonials.stats.onTimeRate, label: 'On-Time Rate' },
  { value: testimonials.stats.yearsExperience, label: 'Years Experience' },
  { value: testimonials.stats.happyClients, label: 'Happy Clients' },
];

// Icons mapping
const icons: Record<string, string> = {
  clock: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
  shield: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`,
  star: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>`,
  heart: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>`,
};

// Our services brief list
const services = [
  { name: 'Airport Transfers', href: '/services/airport-transfers' },
  { name: 'Point-to-Point Transport', href: '/services/point-to-point' },
  { name: 'Chauffeur Services', href: '/services/chauffeur-services' },
  { name: 'Parcel Delivery', href: '/services/parcel-delivery' },
];
---

<BaseLayout {...seo}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 text-white overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mb-6 animate-fade-in-up">
          About {businessName}
        </h1>
        <p class="text-xl text-warm-100 leading-relaxed animate-fade-in-up" style="animation-delay: 100ms">
          Your trusted transport partner in Gauteng, committed to delivering reliable, safe, and professional shuttle services across Johannesburg, Pretoria, and beyond.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div>
          <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Our Story</span>
          <h2 class="text-display-md font-display font-bold text-primary-500 mt-2 mb-6">
            Building Trust, One Journey at a Time
          </h2>
          <div class="space-y-4 text-warm-700 text-lg leading-relaxed">
            <p>
              {businessName} was founded with a simple vision: to provide Gauteng residents and visitors with transport they can truly rely on. What started as a small family-owned operation has grown into one of the region's most trusted shuttle services.
            </p>
            <p>
              Over the years, we've had the privilege of serving thousands of clients—from business travelers rushing to catch flights at OR Tambo, to families heading out for special occasions, to businesses needing secure parcel delivery. Each journey reinforces our commitment to excellence.
            </p>
            <p>
              We're not just about getting you from A to B. We're about peace of mind, knowing that your transport is handled by professionals who care. Whether it's a 4 AM airport run or a last-minute delivery, we're here for you—24/7.
            </p>
            <p class="text-primary-500 font-semibold">
              Our reputation is built on every trip we complete, every client we serve, and every promise we keep.
            </p>
          </div>
        </div>

        <!-- Image Placeholder -->
        <div class="relative">
          <div class="absolute -top-4 -right-4 w-32 h-32 bg-accent-500/20 rounded-2xl"></div>
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-accent-500/10 rounded-2xl"></div>
          <div class="relative bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl aspect-[4/3] flex items-center justify-center shadow-2xl">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto text-white/40 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-white/60 text-sm">Team Photo</p>
              <p class="text-white/40 text-xs mt-1">Replace with company/team image</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Values Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- Section header -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Our Values</span>
        <h2 class="text-display-md font-display font-bold text-primary-500 mt-2 mb-4">
          What Drives Us
        </h2>
        <p class="text-warm-600 text-lg">
          Our core values guide every decision we make and every service we deliver.
        </p>
      </div>

      <!-- Values grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value, index) => (
          <div
            class="text-center p-8 bg-warm-50 rounded-2xl hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="w-16 h-16 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mx-auto mb-6">
              <Fragment set:html={icons[value.icon]} />
            </div>
            <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">
              {value.title}
            </h3>
            <p class="text-warm-600 text-sm leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Stats Section -->
  <section class="py-24 bg-primary-500 text-white relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="text-accent-400 font-semibold text-sm tracking-wide uppercase">Why Choose Us</span>
        <h2 class="text-display-md font-display font-bold mt-2 mb-4">
          Trusted by Thousands Across Gauteng
        </h2>
        <p class="text-warm-200 text-lg">
          Our track record speaks for itself. Here's what we've achieved together with our valued clients.
        </p>
      </div>

      <!-- Stats grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto">
        {stats.map((stat, index) => (
          <div
            class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/10"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="text-5xl lg:text-6xl font-display font-bold text-accent-400 mb-2">
              {stat.value}
            </div>
            <div class="text-warm-300 text-sm font-medium">
              {stat.label}
            </div>
          </div>
        ))}
      </div>

      <!-- Features list -->
      <div class="mt-20 max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-6">
          {[
            { title: '24/7 Availability', desc: 'Early morning flights or late-night arrivals - we\'re always ready to serve you.' },
            { title: 'Professional Drivers', desc: 'Vetted, licensed, and trained drivers committed to your safety and comfort.' },
            { title: 'Fixed Pricing', desc: 'No surge pricing or hidden fees. Know your fare before you book.' },
            { title: 'Real-Time Tracking', desc: 'Flight monitoring and live updates keep you informed every step of the way.' },
            { title: 'Clean, Comfortable Vehicles', desc: 'Well-maintained fleet with regular inspections and professional detailing.' },
            { title: 'Local Knowledge', desc: 'Gauteng experts who know the best routes and avoid unnecessary delays.' },
          ].map((feature) => (
            <div class="flex items-start space-x-4 bg-white/5 rounded-xl p-6 border border-white/10">
              <div class="flex-shrink-0 w-6 h-6 bg-accent-500 rounded-full flex items-center justify-center mt-1">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg mb-1">{feature.title}</h4>
                <p class="text-warm-300 text-sm leading-relaxed">{feature.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Our Services Overview -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">What We Offer</span>
        <h2 class="text-display-md font-display font-bold text-primary-500 mt-2 mb-4">
          Our Services
        </h2>
        <p class="text-warm-600 text-lg">
          From airport transfers to executive chauffeur services, we have a solution for every transport need.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        {services.map((service) => (
          <a
            href={service.href}
            class="group bg-white rounded-xl p-6 shadow-soft hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1 text-center"
          >
            <div class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center text-accent-600 mx-auto mb-4 group-hover:bg-accent-500 group-hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
            <h3 class="font-display font-semibold text-primary-500 group-hover:text-accent-600 transition-colors">
              {service.name}
            </h3>
          </a>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/services"
          class="inline-flex items-center px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-soft group"
        >
          View All Services
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto text-center bg-gradient-diagonal from-accent-500 to-accent-600 rounded-3xl p-12 lg:p-16 shadow-accent relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full blur-2xl"></div>

        <div class="relative z-10">
          <h2 class="text-display-md font-display font-bold text-white mb-4">
            Ready to Experience the Difference?
          </h2>
          <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
            Book your next journey with {businessName} and discover why thousands of Gauteng residents trust us with their transport needs.
          </p>

          <div class="flex flex-wrap justify-center gap-4">
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 bg-white text-accent-600 font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl group"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Book on WhatsApp
              <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a
              href="/contact"
              class="inline-flex items-center px-8 py-4 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-xl border border-white/30 transition-all duration-200"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
