---
/**
 * Contact Page - The Don Wagon
 * Contact information, methods, operating hours, and contact form
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// SEO configuration
const seo = {
  title: 'Contact Us',
  description: 'Get in touch with The Don Wagon. Available 24/7 for bookings and inquiries. Contact us via WhatsApp, phone, or email for reliable modern city shuttle services across Gauteng.',
  keywords: 'contact don\'s transport, gauteng shuttle contact, book shuttle johannesburg, transport contact pretoria, 24/7 shuttle service',
};

// Contact details from environment variables
const phone = import.meta.env.PUBLIC_PHONE || '+27 77 364 2006';
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const email = import.meta.env.PUBLIC_EMAIL || 'donstransport@voogt.co.za';
const address = import.meta.env.PUBLIC_ADDRESS || 'Pretoria, Gauteng';

// WhatsApp URL with pre-filled message
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent("Hi, I'd like to get in touch with The Don Wagon.\n\nMy inquiry:\n")}`;

// Contact methods
const contactMethods = [
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>`,
    title: 'Phone',
    value: phone,
    description: 'Call us directly for immediate assistance',
    href: `tel:${phone.replace(/\s/g, '')}`,
    action: 'Call Now',
  },
  {
    icon: `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>`,
    title: 'WhatsApp',
    value: 'Message Us',
    description: 'Fastest way to get a quote and book your ride',
    href: whatsappUrl,
    action: 'Start Chat',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    title: 'Email',
    value: email,
    description: 'Send us a detailed inquiry or request',
    href: `mailto:${email}?subject=Inquiry%20from%20Website`,
    action: 'Send Email',
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
    title: 'Location',
    value: address,
    description: 'Serving Johannesburg, Pretoria & surrounding areas',
    href: '#',
    action: '',
  },
];
---

<BaseLayout {...seo}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 bg-accent-500/20 border border-accent-500/30 rounded-full text-accent-400 text-sm font-medium tracking-wide mb-6 animate-fade-in">
          24/7 Available
        </span>
        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mb-6 animate-fade-in-up" style="animation-delay: 100ms">
          Get in Touch
        </h1>
        <p class="text-xl text-warm-200 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 200ms">
          We're here to help with your transport needs. Contact us anytime for bookings, inquiries, or support.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Methods Grid -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {contactMethods.map((method, index) => (
          <article
            class="bg-white rounded-2xl p-8 shadow-soft hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Icon -->
            <div class="w-16 h-16 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mb-6">
              <Fragment set:html={method.icon} />
            </div>

            <!-- Content -->
            <h2 class="text-xl font-display font-semibold text-primary-500 mb-2">
              {method.title}
            </h2>
            <p class="text-warm-600 text-sm mb-4">
              {method.description}
            </p>

            {method.action ? (
              <>
                <p class="text-primary-600 font-medium mb-4">
                  {method.value}
                </p>
                <a
                  href={method.href}
                  target={method.title === 'WhatsApp' ? '_blank' : undefined}
                  rel={method.title === 'WhatsApp' ? 'noopener noreferrer' : undefined}
                  class="inline-flex items-center text-accent-600 hover:text-accent-700 font-semibold text-sm transition-colors"
                >
                  {method.action}
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </>
            ) : (
              <p class="text-primary-600 font-medium">
                {method.value}
              </p>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Operating Hours Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Always Available</span>
          <h2 class="text-display-md font-display font-bold text-primary-500 mt-2 mb-4">
            Operating Hours
          </h2>
          <p class="text-warm-600 text-lg">
            We're available around the clock to serve your transport needs.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- 24/7 Service Card -->
          <div class="bg-gradient-diagonal from-accent-500 to-accent-600 rounded-2xl p-8 text-white text-center shadow-accent">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-2xl font-display font-bold mb-2">24/7 Service</h3>
            <p class="text-white/90">
              Every day, all day. Early morning flights, late-night arrivals - we're always ready.
            </p>
          </div>

          <!-- Quick Response Card -->
          <div class="bg-primary-500 rounded-2xl p-8 text-white text-center">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <h3 class="text-2xl font-display font-bold mb-2">Quick Response</h3>
            <p class="text-warm-200">
              WhatsApp responses within minutes. Phone calls answered immediately during business hours.
            </p>
          </div>
        </div>

        <!-- Special Hours Note -->
        <div class="mt-8 p-6 bg-warm-50 rounded-xl border border-warm-200">
          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-accent-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h4 class="font-semibold text-primary-500 mb-1">Advance Bookings Recommended</h4>
              <p class="text-warm-600 text-sm">
                While we're available 24/7, we recommend booking at least 2-4 hours in advance for airport transfers and 24 hours for chauffeur services to ensure availability.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Booking CTA Section -->
  <section class="py-24 bg-primary-500 text-white relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-display-md font-display font-bold mb-4">
            Ready to Book?
          </h2>
          <p class="text-warm-200 text-lg">
            Get an instant quote and book your ride in minutes via WhatsApp.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <!-- WhatsApp CTA -->
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white text-primary-500 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center text-accent-600 flex-shrink-0">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-display font-semibold mb-2 group-hover:text-accent-600 transition-colors">
                  Book via WhatsApp
                </h3>
                <p class="text-warm-600 text-sm mb-3">
                  Instant responses, easy booking, and real-time updates.
                </p>
                <span class="inline-flex items-center text-accent-600 font-semibold text-sm">
                  Start Chat
                  <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>

          <!-- Email CTA -->
          <a
            href={`mailto:${email}?subject=Service%20Inquiry&body=Hi%2C%0A%0AI'd%20like%20to%20inquire%20about%20your%20transport%20services.%0A%0AService%20needed%3A%0APickup%20location%3A%0ADropoff%20location%3A%0ADate%3A%0ATime%3A%0APassengers%3A%0A%0AAdditional%20details%3A`}
            class="group bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-2xl p-8 hover:bg-white/20 transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-display font-semibold mb-2">
                  Email Us
                </h3>
                <p class="text-warm-200 text-sm mb-3">
                  Send detailed inquiries or special requests.
                </p>
                <span class="inline-flex items-center text-accent-400 font-semibold text-sm">
                  Send Email
                  <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </div>

        <!-- Additional Info -->
        <div class="mt-12 text-center">
          <p class="text-warm-300 mb-4">
            Need to see pricing first?
          </p>
          <a
            href="/services"
            class="inline-flex items-center text-accent-400 hover:text-accent-300 font-semibold transition-colors"
          >
            View All Services & Pricing
            <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
