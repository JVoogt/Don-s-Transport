              </svg>
              No Hidden Fees
            </div>
            <div class="text-sm text-warm-300">Transparent Pricing</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-display font-bold text-accent-400">24/7</div>
            <div class="text-sm text-warm-300">Available Anytime</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Selection Section -->
  <section class="py-24 bg-warm-50" id="services">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- Section header -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-display-md font-display font-bold text-primary-500 mb-4">
          Choose Your Service
        </h2>
        <p class="text-warm-600 text-lg">
          Click on any service below to send a pre-filled quote request via WhatsApp
        </p>
      </div>

      <!-- Services grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {services.services.map((service, index) => {
          const whatsappUrl = getWhatsAppUrl(service);

          return (
            <article
              class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1 flex flex-col"
              style={`animation-delay: ${index * 100}ms`}
            >
              <!-- Icon -->
              <div class="w-16 h-16 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mb-6 group-hover:bg-accent-500 group-hover:text-white transition-colors">
                <Fragment set:html={serviceIcons[service.icon]} />
              </div>

              <!-- Content -->
              <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">
                {service.title}
              </h3>
              <p class="text-warm-600 text-sm mb-4 flex-grow">
                {service.shortDescription}
              </p>

              <!-- Price -->
              <div class="mb-4 pb-4 border-b border-warm-100">
                <span class="text-sm text-warm-500">Starting from</span>
                <div class="text-2xl font-display font-bold text-accent-600">{service.priceFrom}</div>
              </div>

              <!-- CTA Button -->
              <a
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full inline-flex items-center justify-center px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 group/btn"
              >
