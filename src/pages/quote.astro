---
/**
 * Quote Request Page - The Don Wagon
 * Service selection page with WhatsApp quote requests and alternative contact methods
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import services from '../data/services.json';

// SEO configuration
const seo = {
  title: 'Get a Free Quote',
  description: 'Request an instant quote for Don\'s Transport Shuttle services in Gauteng. Choose from airport transfers, point-to-point transport, chauffeur services, or parcel delivery. Get your quote via WhatsApp in minutes.',
  keywords: 'transport quote gauteng, airport shuttle quote, johannesburg transport booking, shuttle service pricing, instant transport quote',
};

// Contact details from environment variables
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const email = import.meta.env.PUBLIC_EMAIL || 'donstransport@voogt.co.za';
const phone = import.meta.env.PUBLIC_PHONE || '+27 77 364 2006';

// Service icons mapping (using inline SVGs for performance)
const serviceIcons: Record<string, string> = {
  plane: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>`,
  'map-pin': `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`,
  crown: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l3.5 7L12 6l3.5 4L19 3M5 3v11a2 2 0 002 2h10a2 2 0 002-2V3M7 21h10"/></svg>`,
  package: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>`,
};

// Generate WhatsApp URLs for each service
const getWhatsAppUrl = (service: typeof services.services[0]) => {
  let message = `Hi, I'd like to get a quote for ${service.title}.\n\n`;

  if (service.id === 'airport-transfers') {
    message += 'My booking details:\n\nAirport: (OR Tambo / Lanseria)\nPickup/Dropoff Address:\nDate:\nTime:\nPassengers:\nLuggage:';
  } else if (service.id === 'point-to-point') {
    message += 'My booking details:\n\nPickup Address:\nDropoff Address:\nDate:\nTime:\nPassengers:\nAdditional Stops:';
  } else if (service.id === 'chauffeur-services') {
    message += 'My booking details:\n\nService Type: (Hourly / Half-day / Full-day)\nDate:\nDuration:\nPickup Address:\nPassengers:\nVehicle Preference:';
  } else if (service.id === 'parcel-delivery') {
    message += 'My parcel details:\n\nPickup Address:\nDelivery Address:\nParcel Size/Weight:\nDelivery Timeframe: (Same-day / Urgent)\nSpecial Handling Requirements:';
  }

  return `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
};
---

<BaseLayout {...seo}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative py-24 lg:py-32 bg-gradient-diagonal from-primary-500 to-primary-600 text-white overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 bg-accent-500/20 border border-accent-500/30 rounded-full text-accent-400 text-sm font-medium tracking-wide mb-6 animate-fade-in">
          Fast & Easy Booking
        </span>
        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mb-6 animate-fade-in-up" style="animation-delay: 100ms">
          Get a <span class="text-accent-400">Free Quote</span>
