---
/**
 * Chauffeur Services Page
 * Executive and VIP chauffeur services for business professionals
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import services from '../../data/services.json';

// Get chauffeur service data
const service = services.services.find(s => s.slug === 'chauffeur-services');

if (!service) {
  return Astro.redirect('/services');
}

// SEO configuration from service data
const seo = {
  title: service.title,
  description: service.longDescription,
  keywords: service.seoKeywords,
  canonical: `${import.meta.env.PUBLIC_SITE_URL || 'https://transport.voogt.co.za'}/services/${service.slug}`,
  ogImage: service.coverImage,
};

// Contact details from environment variables
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const whatsappMessage = encodeURIComponent(
  `Hi, I'd like to book ${service.title}. My details:\n\nDate:\nTime:\nPickup Location:\nDestination:\nDuration (hourly/half-day/full-day):\nPassengers:\nSpecial Requirements:`
);
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

// FAQPage structured data for SEO
const faqStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: service.faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};

// Service structured data
const serviceStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  serviceType: service.title,
  provider: {
    '@type': 'LocalBusiness',
    name: import.meta.env.PUBLIC_BUSINESS_NAME || "Don's Transport Shuttle",
    url: import.meta.env.PUBLIC_SITE_URL || 'https://transport.voogt.co.za',
  },
  areaServed: {
    '@type': 'State',
    name: 'Gauteng',
  },
  description: service.longDescription,
  offers: {
    '@type': 'Offer',
    priceSpecification: {
      '@type': 'PriceSpecification',
      price: service.priceFrom.replace('R', ''),
      priceCurrency: 'ZAR',
    },
  },
};

// Icon for service
const crownIcon = `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l3.5 7L12 6l3.5 4L19 3M5 3v11a2 2 0 002 2h10a2 2 0 002-2V3M7 21h10"/></svg>`;
---

<BaseLayout
  {...seo}
  structuredData={[faqStructuredData, serviceStructuredData]}
>
  <Header slot="header" transparent={false} />

  <!-- Breadcrumb Navigation -->
  <nav class="bg-warm-50 border-b border-warm-100" aria-label="Breadcrumb">
    <div class="container mx-auto px-4 lg:px-8 py-4">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-warm-600 hover:text-primary-500 transition-colors">
            Home
          </a>
        </li>
        <li class="text-warm-400">/</li>
        <li>
          <a href="/services" class="text-warm-600 hover:text-primary-500 transition-colors">
            Services
          </a>
        </li>
        <li class="text-warm-400">/</li>
        <li class="text-primary-500 font-medium" aria-current="page">
          {service.shortTitle}
        </li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-500 to-primary-700 text-white py-20 lg:py-28 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 bg-accent-500/20 border-2 border-accent-500/30 rounded-2xl mb-6">
          <div class="text-accent-400">
            <Fragment set:html={crownIcon} />
          </div>
        </div>

        <!-- Title -->
        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mb-6 animate-fade-in-up">
          {service.title}
        </h1>

        <!-- Description -->
        <p class="text-xl text-warm-100 mb-8 max-w-3xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 100ms">
          {service.longDescription}
        </p>

        <!-- Price & CTA -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up" style="animation-delay: 200ms">
          <div class="flex items-baseline space-x-2">
            <span class="text-warm-300 text-lg">Starting from</span>
            <span class="text-4xl font-display font-bold text-accent-400">{service.priceFrom}</span>
          </div>
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-accent group"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {service.ctaText}
            <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-display-md font-display font-bold text-primary-500 mb-4">
            Premium Features Included
          </h2>
          <p class="text-warm-600 text-lg">
            Experience professional chauffeur service with attention to every detail
          </p>
        </div>

        <!-- Features Grid -->
        <div class="grid md:grid-cols-2 gap-6">
          {service.features.map((feature, index) => (
            <div
              class="flex items-start space-x-4 p-6 bg-warm-50 rounded-xl hover:bg-accent-50 transition-colors group"
              style={`animation-delay: ${index * 50}ms`}
            >
              <div class="flex-shrink-0 w-10 h-10 bg-accent-100 group-hover:bg-accent-500 rounded-lg flex items-center justify-center text-accent-600 group-hover:text-white transition-colors">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-primary-500 font-medium leading-relaxed">
                  {feature}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Ideal For Section -->
  <section class="py-20 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-display-md font-display font-bold text-primary-500 mb-4">
            Ideal For
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {[
            {
              title: 'Business Executives',
              description: 'Arrive at meetings, conferences, and corporate events in style and on time.',
              icon: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
            },
            {
              title: 'VIP Clients',
              description: 'Discretion and luxury for dignitaries, celebrities, and special guests.',
              icon: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z'
            },
            {
              title: 'Special Events',
              description: 'Weddings, anniversaries, and celebrations deserve premium transport.',
              icon: 'M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7'
            },
          ].map((item) => (
            <article class="bg-white rounded-2xl p-8 shadow-soft hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1">
              <div class="w-14 h-14 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mb-6">
                <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon}/>
                </svg>
              </div>
              <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">
                {item.title}
              </h3>
              <p class="text-warm-600 leading-relaxed">
                {item.description}
              </p>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-display-md font-display font-bold text-primary-500 mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-warm-600 text-lg">
            Everything you need to know about our chauffeur services
          </p>
        </div>

        <!-- FAQ List -->
        <div class="space-y-6">
          {service.faqs.map((faq, index) => (
            <article class="bg-warm-50 rounded-xl p-8 hover:bg-accent-50 transition-colors">
              <h3 class="text-lg font-display font-semibold text-primary-500 mb-3">
                {faq.question}
              </h3>
              <p class="text-warm-700 leading-relaxed">
                {faq.answer}
              </p>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-500 to-primary-700 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-accent-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-accent-500/10 rounded-full blur-2xl"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-display-md font-display font-bold mb-6">
          Ready to Experience Premium Service?
        </h2>
        <p class="text-xl text-warm-100 mb-8 leading-relaxed">
          Book your executive chauffeur service today. Contact us via WhatsApp for instant quotes and availability.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Book on WhatsApp
          </a>
          <a
            href="/services"
            class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl border border-white/20 transition-all duration-200"
          >
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
