---
/**
 * Services Overview Page - Don's Transport Shuttle
 * Displays all 4 transport services with details and links to individual service pages
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import services from '../../data/services.json';

// SEO configuration
const seo = {
  title: 'Our Services',
  description: 'Professional transport shuttle services in Gauteng. Airport transfers from R350, point-to-point from R250, executive chauffeur from R650, and same-day parcel delivery from R200. Book via WhatsApp for instant quotes.',
  keywords: 'gauteng shuttle services, airport transfer pricing, chauffeur services gauteng, parcel delivery johannesburg, transport services pretoria',
};

// Service icons mapping (using inline SVGs for performance)
const serviceIcons: Record<string, string> = {
  plane: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>`,
  'map-pin': `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`,
  crown: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3l3.5 7L12 6l3.5 4L19 3M5 3v11a2 2 0 002 2h10a2 2 0 002-2V3M7 21h10"/></svg>`,
  package: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>`,
};

// Contact details from environment variables
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent("Hi, I'd like to book a shuttle. Please provide details about your services.")}`;
---

<BaseLayout {...seo}>
  <Header slot="header" transparent={false} />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-primary-500 text-white overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 bg-accent-500/20 border border-accent-500/30 rounded-full text-accent-400 text-sm font-medium tracking-wide animate-fade-in">
          Professional Transport Solutions
        </span>
        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mt-4 mb-6 animate-fade-in-up" style="animation-delay: 100ms">
          Our Services
        </h1>
        <p class="text-xl text-warm-200 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 200ms">
          From airport shuttles to executive chauffeur services, we provide reliable, professional transport across Gauteng. Choose the service that fits your needs.
        </p>
      </div>
    </div>

    <!-- Decorative wave -->
    <div class="absolute bottom-0 left-0 w-full h-16 bg-warm-50 transform -skew-y-1 origin-bottom-left"></div>
  </section>

  <!-- Services Grid Section -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- Services grid -->
      <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {services.services.map((service, index) => (
          <article
            class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-soft-lg transition-all duration-300 transform hover:-translate-y-1 flex flex-col"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Icon -->
            <div class="w-16 h-16 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mb-6 group-hover:bg-accent-500 group-hover:text-white transition-colors">
              <Fragment set:html={serviceIcons[service.icon]} />
            </div>

            <!-- Content -->
            <h2 class="text-2xl font-display font-semibold text-primary-500 mb-3">
              {service.title}
            </h2>
            <p class="text-warm-600 mb-6 leading-relaxed flex-grow">
              {service.shortDescription}
            </p>

            <!-- Features list -->
            <ul class="space-y-2 mb-6">
              {service.features.slice(0, 3).map((feature) => (
                <li class="flex items-start space-x-2 text-sm text-warm-600">
                  <svg class="w-5 h-5 text-accent-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Price & CTA -->
            <div class="flex items-center justify-between pt-6 border-t border-warm-100 mt-auto">
              <div>
                <span class="text-sm text-warm-500 block">Starting from</span>
                <span class="text-2xl font-display font-bold text-accent-600">{service.priceFrom}</span>
              </div>
              <a
                href={`/services/${service.slug}`}
                class="inline-flex items-center px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 group/link"
              >
                Learn More
                <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Our Services Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Service Excellence</span>
        <h2 class="text-display-md font-display font-bold text-primary-500 mt-2 mb-4">
          What Sets Us Apart
        </h2>
        <p class="text-warm-600 text-lg">
          Every journey with Don's Transport Shuttle is backed by our commitment to reliability, safety, and exceptional service.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {[
          {
            icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
            title: 'Always On Time',
            description: 'We monitor traffic and flights in real-time to ensure punctual service, every time.',
          },
          {
            icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`,
            title: 'Professional Drivers',
            description: 'All drivers are vetted, trained, and committed to your safety and comfort.',
          },
          {
            icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
            title: 'Fixed Pricing',
            description: 'No surge pricing, no hidden fees. Know your fare before you book.',
          },
        ].map((feature) => (
          <div class="text-center">
            <div class="w-14 h-14 bg-accent-100 rounded-xl flex items-center justify-center text-accent-600 mx-auto mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-xl font-display font-semibold text-primary-500 mb-2">
              {feature.title}
            </h3>
            <p class="text-warm-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- WhatsApp CTA Section -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto text-center bg-gradient-diagonal from-accent-500 to-accent-600 rounded-3xl p-12 lg:p-16 shadow-accent relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full blur-2xl"></div>

        <div class="relative z-10">
          <h2 class="text-display-md font-display font-bold text-white mb-4">
            Ready to Book Your Ride?
          </h2>
          <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
            Get an instant quote via WhatsApp. No waiting, no complicated forms. Just reliable transport when you need it.
          </p>

          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-white text-accent-600 font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Book on WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
