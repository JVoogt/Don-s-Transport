---
/**
 * Parcel Delivery Service Page
 * Dedicated page for specialized parcel delivery service
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import servicesData from '../../data/services.json';

// Get the parcel delivery service data
const service = servicesData.services.find(s => s.slug === 'parcel-delivery');

if (!service) {
  throw new Error('Parcel delivery service not found in services.json');
}

// SEO configuration from service data
const seo = {
  title: service.title,
  description: service.longDescription,
  keywords: service.seoKeywords,
  canonical: `${import.meta.env.PUBLIC_SITE_URL || 'https://transport.voogt.co.za'}/services/parcel-delivery`,
  ogImage: service.coverImage,
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: service.title,
    description: service.longDescription,
    provider: {
      '@type': 'LocalBusiness',
      name: import.meta.env.PUBLIC_BUSINESS_NAME || "The Don Wagon",
      telephone: import.meta.env.PUBLIC_PHONE || '+27 77 364 2006',
      email: import.meta.env.PUBLIC_EMAIL || 'donstransport@voogt.co.za',
    },
    areaServed: {
      '@type': 'State',
      name: 'Gauteng',
    },
    offers: {
      '@type': 'Offer',
      price: '200',
      priceCurrency: 'ZAR',
      description: 'Starting from R200',
    },
  },
};

// Contact details
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const email = import.meta.env.PUBLIC_EMAIL || 'donstransport@voogt.co.za';
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(`Hi, I'd like to book a parcel delivery.\n\nPickup Address:\nDelivery Address:\nParcel Details:\nUrgency:`)}`;

// FAQPage schema for SEO
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: service.faqs.map(faq => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<BaseLayout {...seo}>
  <Header slot="header" transparent={false} />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 bg-gradient-to-br from-primary-500 to-primary-700 text-white overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-10"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center space-x-2 text-warm-300">
            <li><a href="/" class="hover:text-accent-400 transition-colors">Home</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/services" class="hover:text-accent-400 transition-colors">Services</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-accent-400" aria-current="page">{service.shortTitle}</li>
          </ol>
        </nav>

        <!-- Service Icon -->
        <div class="w-20 h-20 bg-accent-500/20 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>

        <h1 class="text-display-lg lg:text-display-xl font-display font-bold mb-6">
          {service.title}
        </h1>
        <p class="text-xl text-warm-100 max-w-3xl mx-auto mb-8">
          {service.longDescription}
        </p>

        <!-- Pricing Badge -->
        <div class="inline-flex items-center px-6 py-3 bg-accent-500/20 border border-accent-400/30 rounded-full mb-8">
          <svg class="w-5 h-5 text-accent-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-accent-400 font-semibold">From {service.priceFrom}</span>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-accent group"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {service.ctaText}
            <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a
            href={`mailto:${email}?subject=Parcel%20Delivery%20Enquiry`}
            class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl border border-white/20 transition-all duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Email Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">What's Included</span>
          <h2 class="text-display-md font-display font-bold text-primary-500 mt-2">
            Service Features
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {service.features.map((feature) => (
            <div class="flex items-start space-x-4 bg-white p-6 rounded-xl shadow-soft">
              <div class="flex-shrink-0 w-10 h-10 bg-accent-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-warm-700 flex-1">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Simple Process</span>
          <h2 class="text-display-md font-display font-bold text-primary-500 mt-2">
            How It Works
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-12">
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-white font-display font-bold text-2xl">1</span>
            </div>
            <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">Book via WhatsApp</h3>
            <p class="text-warm-600">
              Contact us with pickup and delivery details. We'll provide an instant quote.
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-white font-display font-bold text-2xl">2</span>
            </div>
            <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">We Collect</h3>
            <p class="text-warm-600">
              Our driver arrives at your specified time to securely collect your parcel.
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-white font-display font-bold text-2xl">3</span>
            </div>
            <h3 class="text-xl font-display font-semibold text-primary-500 mb-3">Fast Delivery</h3>
            <p class="text-warm-600">
              Track in real-time as we deliver your parcel with proof of delivery.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="py-24 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent-600 font-semibold text-sm tracking-wide uppercase">Common Questions</span>
          <h2 class="text-display-md font-display font-bold text-primary-500 mt-2">
            Frequently Asked Questions
          </h2>
        </div>

        <div class="space-y-6">
          {service.faqs.map((faq) => (
            <details class="group bg-white rounded-xl shadow-soft overflow-hidden">
              <summary class="flex items-center justify-between px-8 py-6 cursor-pointer list-none">
                <h3 class="text-lg font-semibold text-primary-500 pr-8">
                  {faq.question}
                </h3>
                <svg class="w-5 h-5 text-accent-500 flex-shrink-0 transform group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </summary>
              <div class="px-8 pb-6 text-warm-600 leading-relaxed">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-primary-500 text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-display-md font-display font-bold mb-4">
          Need Fast, Secure Parcel Delivery?
        </h2>
        <p class="text-warm-100 text-lg mb-8 max-w-2xl mx-auto">
          Get an instant quote on WhatsApp. Same-day delivery available for urgent parcels across Gauteng.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-accent"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Book Delivery Now
          </a>
          <a
            href="/services"
            class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl border border-white/20 transition-all duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQPage Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <Footer slot="footer" />
</BaseLayout>
