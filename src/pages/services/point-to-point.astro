---
/**
 * Point-to-Point Service Page
 * Individual service page for door-to-door transfers
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import services from '../../data/services.json';

// Get the point-to-point service data
const service = services.services.find(s => s.slug === 'point-to-point');

if (!service) {
  throw new Error('Point-to-point service data not found');
}

// SEO configuration from service data
const seo = {
  title: service.title,
  description: service.longDescription,
  keywords: service.seoKeywords,
  canonical: `${import.meta.env.PUBLIC_SITE_URL}/services/point-to-point`,
};

// Contact details
const whatsappNumber = import.meta.env.PUBLIC_WHATSAPP_NUMBER || '27773642006';
const email = import.meta.env.PUBLIC_EMAIL || 'donstransport@voogt.co.za';
const whatsappMessage = encodeURIComponent(`Hi, I'd like to book a ${service.title}. My details:\n\nPickup:\nDropoff:\nDate:\nTime:\nPassengers:`);
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

// FAQPage structured data
const faqStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: service.faqs.map(faq => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<BaseLayout {...seo} structuredData={faqStructuredData}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="relative bg-primary-500 text-white pt-32 pb-20 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-subtle-grid opacity-5"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-accent-500/10 to-transparent"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-warm-300">
          <li>
            <a href="/" class="hover:text-accent-400 transition-colors">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </li>
          <li>
            <a href="/services" class="hover:text-accent-400 transition-colors">Services</a>
          </li>
          <li>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </li>
          <li aria-current="page" class="text-accent-400">
            {service.shortTitle}
          </li>
        </ol>
      </nav>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Hero Content -->
        <div class="space-y-6">
          <!-- Icon -->
          <div class="w-20 h-20 bg-accent-500 rounded-2xl flex items-center justify-center shadow-accent">
            <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>

          <div>
            <h1 class="text-display-lg font-display font-bold mb-4">
              {service.title}
            </h1>
            <p class="text-xl text-warm-200">
              {service.longDescription}
            </p>
          </div>

          <!-- Pricing -->
          <div class="inline-flex items-center px-6 py-3 bg-white/10 rounded-xl border border-white/20">
            <span class="text-sm text-warm-300 mr-2">Starting from</span>
            <span class="text-3xl font-display font-bold text-accent-400">{service.priceFrom}</span>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-accent group"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              {service.ctaText}
              <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a
              href={`mailto:${email}?subject=${encodeURIComponent(`${service.title} Enquiry`)}`}
              class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl border border-white/20 transition-all duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Email Us
            </a>
          </div>
        </div>

        <!-- Hero Image Placeholder -->
        <div class="hidden lg:block">
          <div class="relative bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl aspect-[4/3] flex items-center justify-center shadow-2xl">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto text-white/40 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <p class="text-white/60 text-sm">Service Image</p>
              <p class="text-white/40 text-xs mt-1">Replace with professional photo</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-warm-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-display-md font-display font-bold text-primary-500 text-center mb-12">
          What's Included
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          {service.features.map((feature) => (
            <div class="flex items-start space-x-4 bg-white rounded-xl p-6 shadow-soft hover:shadow-soft-lg transition-shadow">
              <div class="flex-shrink-0 w-8 h-8 bg-accent-500 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-warm-700 font-medium flex-1">
                {feature}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-display-md font-display font-bold text-primary-500 text-center mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-warm-600 text-center mb-12">
          Got questions about our {service.shortTitle.toLowerCase()} service? We've got answers.
        </p>

        <div class="space-y-6">
          {service.faqs.map((faq, index) => (
            <details
              class="group bg-warm-50 rounded-xl border border-warm-200 hover:border-accent-500 transition-colors overflow-hidden"
            >
              <summary class="flex items-center justify-between cursor-pointer px-6 py-5 font-semibold text-primary-500 list-none">
                <span class="pr-4">{faq.question}</span>
                <svg
                  class="w-5 h-5 text-accent-500 flex-shrink-0 transform group-open:rotate-180 transition-transform"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </summary>
              <div class="px-6 pb-5 text-warm-700">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-500 text-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-display-md font-display font-bold mb-4">
          Ready to Book Your Transfer?
        </h2>
        <p class="text-warm-200 text-lg mb-8">
          Get an instant quote via WhatsApp. Just tell us your pickup and dropoff locations, and we'll take care of the rest.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-all duration-200 transform hover:scale-105 shadow-accent"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Book on WhatsApp
          </a>
          <a
            href="/services"
            class="inline-flex items-center px-8 py-4 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl border border-white/20 transition-all duration-200"
          >
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
